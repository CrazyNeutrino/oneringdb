{{> pagination}}
<div class="row members-grid members-grid-md">
	{{#each members}}
	<div class="col-xs-6 col-sm-3 members-grid-item text-center" data-card-id="{{cardId}}">
		<div class="btn-group quantity-group">
		{{#for 0 maxQuantity 1}}
			<label class="btn btn-default" {{#smartIf ../../membersReadOnly}}disabled="disabled"{{/smartIf}} data-quantity="{{this}}">{{this}}</label>
		{{/for}}	
		</div>
		<a class="toggle-popover toggle-modal" data-card-id="{{cardId}}"
			data-image-base="{{card.imageBase}}" style="cursor: pointer;">
			<img src="{{cardImagePath card.imageBase}}" class="card-sm" style="margin-bottom: 5px;" />
		</a>
		<small><strong>{{card.name}}</strong></small>
	</div>
	{{/each}}
</div>
{{> pagination}}