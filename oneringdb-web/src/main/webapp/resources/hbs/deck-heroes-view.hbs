<table class="heroes">
	{{#each heroes ~}}
	{{#with card ~}}
	<tr>
		<td>
			<a class="hero-name toggle-popover toggle-modal" data-card-id="{{id}}" 
				data-image-base="{{imageBase}}" style="cursor: pointer;"> 
				<div class="hero-name bg-{{sphere}}"><i class="db-icon db-icon-{{sphere}}"></i> {{name}}</div>
			</a>				
		</td>
		<td><span class="attr-threat-cost">{{escapeAttrX threatCost}}</span></td>
		<td><i class="db-icon db-icon-willpower"></i>{{escapeAttrX willpower}}</td>
		<td><i class="db-icon db-icon-attack"></i>{{escapeAttrX attack}}</td>
		<td><i class="db-icon db-icon-defense"></i>{{escapeAttrX defense}}</td>
		<td><span class="attr-hit-points">{{escapeAttrX hitPoints}}</span></td>
	</tr>
	{{/with ~}}
	{{/each ~}}
</td>
