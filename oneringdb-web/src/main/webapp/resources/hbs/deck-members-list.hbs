{{> pagination}}
<div class="members-list-header row">
	<div class="col-xs-4 col-md-2">
		<span>{{loc 'card.quantity'}}</span>
	</div>
	<div class="col-xs-8 col-md-10">
		<div class="row">
			<div class="col-xs-12 col-sm-5">				
				<div class="name-col">								
					<span>{{loc 'card.name'}}</span>
				</div>				
			</div>
			<div class="col-xs-12 col-sm-7">
				<div class="sphere-col text-center"><span>{{loc 'card.sphere'}}</span></div>
				<div class="type-col text-center"><span>{{loc 'card.type'}}</span></div>
				<div class="attr-col text-center">
					<span data-toggle="tooltip" data-placement="top" title="{{loc 'card.cost'}}">{{loc 'card.cost.sh'}}</span>
				</div>
				<div class="attr-col text-center">
					<span data-toggle="tooltip" data-placement="top" title="{{loc 'card.willpower'}}">{{loc 'card.willpower.sh'}}</span>
				</div>
				<div class="attr-col text-center">
					<span data-toggle="tooltip" data-placement="top" title="{{loc 'card.attack'}}">{{loc 'card.attack.sh'}}</span>
				</div>
				<div class="attr-col text-center">
					<span data-toggle="tooltip" data-placement="top" title="{{loc 'card.defense'}}">{{loc 'card.defense.sh'}}</span>
				</div>
				<div class="attr-col text-center">
					<span data-toggle="tooltip" data-placement="top" title="{{loc 'card.hp'}}">{{loc 'card.hp.sh'}}</span>
				</div>	
			</div>
		</div>
	</div>
</div>		
			
{{#each members}}
<div class="members-list-item row" data-card-id="{{card.id}}">
	<div class="col-xs-4 col-md-2">
		<div class="btn-group quantity-group">
			{{#for 0 maxQuantity 1}}
			<label class="btn btn-default" {{#smartIf ../../membersReadOnly}}disabled="disabled"{{/smartIf}} data-quantity="{{this}}">{{this}}</label>
			{{/for}}
		</div>
	</div>

	<div class="col-xs-8 col-md-10">
		<div class="row">
			{{#with card}}
			<div class="col-xs-12 col-sm-5">				
				<div class="name-col">
					<div class="name"><a class="toggle-popover toggle-modal" data-card-id="{{id}}" 
						data-image-base="{{imageBase}}" style="cursor: pointer;">{{name}}</a></div>
					<div class="set"><span class="secondary-text">{{searchLinkSetName this}}</span></div>
				</div>				
			</div>
			<div class="col-xs-12 col-sm-7 .attrs">
				<div class="sphere-col text-center bg-{{sphere}}">
					<i class="db-icon db-icon-{{sphere}}"></i>
				</div>
				<div class="type-col text-center">
					<i class="db-icon db-icon-{{type}}"></i>
				</div>
				<div class="attr-col text-center">
					{{#smartIf threatCost}}<span class="attr-threat-cost">{{escapeAttrX threatCost}}</span>{{/smartIf}}
					{{#smartIf resourceCost}}<span class="attr-resource-cost">{{escapeAttrX resourceCost}}</span>{{/smartIf}}
				</div>
				<div class="attr-col text-center">
					{{#smartIf willpower}}<i class="db-icon db-icon-willpower"></i>{{escapeAttrX willpower}}{{/smartIf}}
				</div>
				<div class="attr-col text-center">
					{{#smartIf attack}}<i class="db-icon db-icon-attack"></i>{{escapeAttrX attack}}{{/smartIf}}
				</div>
				<div class="attr-col text-center">
					{{#smartIf defense}}<i class="db-icon db-icon-defense"></i>{{escapeAttrX defense}}{{/smartIf}} 
				</div>
				<div class="attr-col text-center">
					{{#smartIf hitPoints}}<span class="attr-hit-points">{{escapeAttrX hitPoints}}</span>{{/smartIf}}
				</div>
			</div>
			{{/with}}
		</div>
	</div>
</div>
{{/each}}
{{> pagination}}